}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function setTanggalReservasi() {
            const nilai = $('#tglReservasi').val()
            $('#TanggalReservasi').val(nilai)
        }
        function setJamSelesai() {
            const nilai = $('#ddlJamSelesai').val()
            $('#JamSelesai').val(nilai + ':00')
        }
        function setJamMulai() {
            const nilai = $('#ddlJamMulai').val()
            $('#JamMulai').val(nilai + ':00')
        }
    </script>
}
